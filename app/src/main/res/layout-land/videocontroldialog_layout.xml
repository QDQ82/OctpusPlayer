<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vc_botpanel"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_horizontal|center_vertical"
    android:background="@color/VideoControl_LandScape"
    android:orientation="horizontal">
        <Button
            android:id="@+id/ptz_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/image_btn_ptz_left_def" />
        <Button
            android:id="@+id/ptz_up"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:background="@drawable/image_btn_ptz_up_def" />
        <Button
            android:id="@+id/ptz_right"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:background="@drawable/image_btn_ptz_right_def" />

        <Button
            android:id="@+id/ptz_down"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/image_btn_ptz_down_def" />



        <Button
            android:id="@+id/ptz_zoomin"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:background="@drawable/image_btn_ptz_zoom_in_def" />
        <Button
            android:id="@+id/ptz_zoomout"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:background="@drawable/image_btn_ptz_zoom_out_def" />
        <Button
            android:id="@+id/single_view"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:background="@drawable/ch1_def"/>
        <Button
            android:id="@+id/multi_view"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:background="@drawable/ch4_def"/>
        <Button
            android:id="@+id/nine_view"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:layout_height="40dp"
            android:background="@drawable/ch9_def"/>

</LinearLayout>